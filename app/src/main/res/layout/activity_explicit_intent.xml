<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#100628"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplicitIntentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            tools:context=".MainActivity">

            <EditText
                android:id="@+id/editTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColorHint="#6D6D6D"
                android:textColor="#DEDEDE"
                android:layout_marginTop="20dp"
                android:hint="@string/input_text" />

            <Button
                android:id="@+id/btnShareTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_dual_clr"
                android:text="Share to"
                android:textColor="#A6A6A6"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTxtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColorHint="#6D6D6D"
                android:textColor="#A6A6A6"
                android:hint="@string/input_phone_number"
                android:inputType="phone"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btnCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_dual_clr"
                android:text="call"
                android:textColor="#A6A6A6"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTxtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColorHint="#6D6D6D"
                android:textColor="#A6A6A6"
                android:hint="input location"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnOpenGoogleMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_dual_clr"
                android:text="Open google map"
                android:textColor="#A6A6A6"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTxtWebURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColorHint="#6D6D6D"
                android:textColor="#DEDEDE"
                android:layout_marginTop="20dp"
                android:hint="@string/input_website_url"
                android:inputType="textPostalAddress"
                tools:ignore="TextFields" />

            <Button
                android:id="@+id/btnOpenWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_dual_clr"
                android:text="Open website"
                android:textColor="#A6A6A6"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnOpenCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_dual_clr"
                android:text="Open Camera"
                android:textColor="#A6A6A6"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnOpenGalery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_dual_clr"
                android:textColor="#A6A6A6"
                android:text="Open Galery"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnOpenAlaram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_dual_clr"
                android:textColor="#A6A6A6"
                android:text="Open Alaram"
                android:textSize="16sp" />
        </LinearLayout>
        
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>